{
  "name": "BlankE",
  "description": "Attempt at simple text editor",
  "repository": {
    "type": "git",
    "url": "git://github.com/xharris/texteditor.git"
  },
  "main": "main.js",
  "author": "Xavier Harris <xhh950@gmail.com> (http://xhhstuff.me)",
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "start": "grunt && /Users/xharris1/Documents/texteditor/electron/Electron.app/Contents/MacOS/Electron .",
    "dev": "electron . --enable-logging",
    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . \"EA Todo\" --out=dist/osx --platform=darwin --arch=x64 --version=0.36.2 --icon=../logo.icns --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "pack:win": "npm run clean:win && electron-packager . \"EA Todo\" --out=dist/win --platform=win32 --arch=ia32 --version=0.36.2 --icon=../logo.ico --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm run pack:osx && electron-builder \"dist/osx/EA Todo-darwin-x64/EA Todo.app\" --platform=osx --out=\"dist/osx\" --config=builder.json",
    "build:win": "npm run pack:win && electron-builder \"dist/win/EA Todo-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
  },
  "webkit": {
    "plugin": true
  },
  "dependencies": {
    "electron-prebuilt": "^1.2.0",
    "fs-extra": "^0.26.5",
    "image-size": "^0.4.0",
    "mdi": "^1.6.50",
    "rimraf": "^2.5.4",
    "simple-grep": "0.0.1",
    "unzip": "^0.1.11"
  },
  "devDependencies": {
    "electron-packager": "^7.4.0",
    "grunt": "^1.0.1",
    "grunt-contrib-less": "^1.3.0",
    "simple-grep": "0.0.1"
  },
  "build": {
    "appID": "blanke",
    "app-category-type": "public.app-category.developer-tools",
    "win": {
      "iconURL": "https://raw.githubusercontent.com/xharris/texteditor/master/src/build/icon.ico"
    }
  }
}
